@import "mixins.styl"

.loan-processing, .deposit-processing {
  display: grid
  grid-template-columns: repeat(2, 1fr)
  grid-template-rows: repeat(2, max-content)
  width: 100%
  height: auto
  padding: var(--main-padding)
  margin-bottom: 100px

  &__header {
    grid-column: 1 / 3
    margin: 70px 0
  }
}