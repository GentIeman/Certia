@import "mixins.styl"

.admin {
  display: grid
  gap: 30px 0
  width: 100%
  height: auto
  padding: var(--main-padding)
  margin-bottom: 80px

  &__header {
    margin-top: 30px
  }

  &__section {
    width: 100%
    height: 100%
    border: solid 2px var(--accent-color)
    padding: 30px
    border-radius: 10px
  }

  &__subtitle {
    margin-bottom: 20px
    font-style(normal, var(--large-size), var(--accent-font), var(--accent-color))
  }

  &__table {
    width: 100%
    max-height: 500px
    overflow: auto
  }

  &__table-row {
    display: grid
    grid-template-columns: repeat(auto-fit, minmax(10px, 1fr))
    gap: 0 40px
    transition: background-color .3s linear

    &_hover:hover {
      background-color: var(--background-gr)
    }

    &:last-child {
      border-bottom: none
    }
  }

  &__table-subtitle {
    font-style(normal, var(--small-size), var(--roboto), var(--decorative-color))
  }

  &__table-data {
    padding: 10px 0
    font-style(normal, var(--small-size), var(--accent-font), var(--accent-color))
  }
}