@import "mixins.styl"
@import "icons.styl"

.header {
  position: relative
  width: 100%
  height: 80px
  background-color: var(--background-gr)
  z-index: 2

  &__nav {
    display flex
    justify-content space-between
    align-items center
    width: inherit
    height: inherit
    padding: var(--main-padding)
  }

  &__logo {
    width: 128px
    height: 34px
    background: no-repeat center / 100% url("../../static/icons/logo.svg")
  }

  &__list {
    display: flex
    gap: 0 20px
    width: max-content
    height: auto
  }

  &__item {
    display: flex
    justify-content: center
    align-items: center
    width: 44px
    height: 44px
    padding: 10px
    cursor: pointer
    border-radius: 50%
    transition background-color .3s linear

    &:is(&_hover:hover, &_focus:focus-within) {
      background-color #C5CBE5FF
    }

    &:is(&_focus:focus-within) > .dropdown__content {
      visibility: visible
    }
  }

  &__label {
    display: flex
    justify-content: center
    align-items: center
    position: relative
    width: 100%
    height: 100%
  }

  &__checkbox {
    position: absolute
    width: 100%
    height: 100%
    opacity: 0
    cursor: pointer

    &:checked ~ .header__theme-icon {
      background: url("../../static/icons/light.svg")
    }
  }

  &__theme-icon {
    display: block
    width: 24px
    height: 24px
    background: no-repeat center/100% url("../../static/icons/moon.svg")
  }


  &__btn {
    width: 24px
    height: 24px

    &.search {
      background: var(--search)
    }

    &.menu-burger {
      background: var(--menu-burger)
    }
  }

  .dropdown {
    display: inline-block
    position: relative

    &__content {
      visibility: hidden
      position: absolute
      margin-top: 10px
      right: 0
      background-color: var(--background-gr)
      width: 200px
      height: auto
      box-shadow: 0 2px 4px 0 rgba(0, 0, 0, .3)
      border-radius: var(--border-radius)
    }

    &__list {
      display: grid
      grid-auto-flow: row
      width: inherit
      height: inherit
    }

    &__item {
      display: flex
      gap: 0 15px
      padding: 5px 22px
      transition: background-color .3s linear

      &:first-child {
        margin-top: 16px
      }

      &:last-child {
        margin-bottom: 16px
      }

      &:is(&_hover:hover, &_focus:focus-within, &_active) > .dropdown__link {
        color: var(--text-color-wt)
      }

      &:is(&_hover:hover, &_focus:focus-within, &_active) {
        background-color: var(--accent-color)
      }

      &:nth-child(1):is(&_hover:hover, &_focus:focus-within, &_active) .home-icon {
        background-image: url("../../static/icons/home-wt.svg")
      }

      &:nth-child(2):is(&_hover:hover, &_focus:focus-within, &_active) .money-icon {
        background-image: url("../../static/icons/money-wt.svg")
      }

      &:nth-child(3):is(&_hover:hover, &_focus:focus-within, &_active) .pyramid-icon {
        background-image: url("../../static/icons/chart-pyramid-wt.svg")
      }

      &:nth-child(4):is(&_hover:hover, &_focus:focus-within, &_active) .bank-icon {
        background-image: url("../../static/icons/bank-wt.svg")
      }

      &:nth-child(5):is(&_hover:hover, &_focus:focus-within, &_active) .user-icon {
        background-image: url("../../static/icons/user-wt.svg")
      }

      &:nth-child(6):is(&_hover:hover, &_focus:focus-within, &_active) .log-out-icon {
        background-image: url("../../static/icons/log-out-wt.svg")
      }
    }

    &__icon {
      display: block
      width: 15px
      height: 15px
    }

    &__link {
      font-style(normal, var(--small-size), var(--roboto), var(--accent-color))
    }
  }
}

.search-backdrop {
  display: flex
  justify-content center
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, .5)
  visibility: hidden
  z-index: 2

  &_show {
    visibility: visible
  }

  .search-container {
    position: relative
    margin-top 10%
    width: 1000px
    height: max-content

    .search {
      display: grid
      grid-template-columns: minmax(100px, auto) 60px
      position: relative
      width: inherit
      height: 60px
      background-color: transparent
      border-radius: 10px
      transition: box-shadow .3s linear
      overflow: hidden
      z-index: 2

      &:is(&_hover:hover, &_focus:focus-within) {
        box-shadow: 0 0 0 2px var(--accent-color)
      }

      &__input {
        width: 100%
        height: 100%
        padding: 0 30px
        font-style(bold, var(--medium-size), var(--roboto), var(--accent-color))
        border: none
        accent-color: var(--accent-color)

        &_placeholder-color::-webkit-input-placeholder {
          color: var(--accent-color)
        }
      }

      &__btn {
        width: 60px
        height: 60px
        background-color: var(--decorative-color)
        border-radius: var(--border-radius)
        transition background-color .3s linear

        &:is(&_hover:hover, &_focus:focus) {
          background-color: var(--accent-color)
        }
      }
    }
  }

  .results {
    display: none
    position: absolute
    padding: 30px 0
    width: inherit
    height: auto
    background-color: var(--background-wt)
    border-radius: 0 0 var(--border-radius) var(--border-radius)
    transform: translateY(-20px)
    z-index: 1

    &_show {
      display: block
    }

    &__list {
      position: relative
      max-height: 300px
      overflow-y: auto
    }

    &__item {
      padding: 15px 30px
      transition: background-color .2s linear
      cursor: pointer

      &:is(&_hover:hover, &_focus:focus-within) {
        background-color: var(--decorative-color)
      }
    }

    &__suggestion {
      font-style(normal, var(--medium-size), var(--roboto), var(--accent-color))
    }
  }
}

.btn {
  border: none
  cursor: pointer
  font-style(normal, var(--small-size), var(--accent-font), var(--text-color-wt))
  border-radius: var(--border-radius)

  &:is(&_background) {
    background-color: var(--accent-color)
  }
}

.field {
  border: none
  accent-color: var(--accent-color)
  background-color: var(--background-field)
}

.footer {
  display: grid
  grid-template-columns: 250px auto 250px
  gap: 40px
  place-items: start
  width: 100%
  height: auto
  padding: 40px 70px
  background-color: var(--dark-green)

  &__logo {
    margin-bottom: 20px
    width: 132px
    height: 34px
    background: no-repeat center / 100% url("../../static/icons/logo.svg")
  }

  &__item {
    padding: 5px 0
  }

  &__link {
    font-style(normal, var(--small-size), var(--accent-font), var(--footer-text))
    transition: color .3s linear

    &:is(&_hover:hover, &_focus:focus) {
      color: var(--decorative-color)
    }
  }

  &__headline {
    font-style(bold, var(--subtitle), var(--accent-font), var(--accent-color))
    margin-bottom: 20px
  }

  &__description {
    margin-bottom: 20px
    font-style(normal, 1.363rem, var(--accent-font), var(--footer-text))
  }

  &__social-media {
    display: flex
    justify-content: space-between
    max-width: 150px
  }

  &__social-network {
    display: flex
    justify-content: center
    align-items: center
    width: 32px
    height: 32px
    border-radius: 5px
    border: solid 2px var(--footer-text)
    cursor: pointer
    transition: all .3s linear

    &:is(&_hover:hover, &_focus:focus) {
      border: solid 2px var(--decorative-color)

      &.instagram {
        background: no-repeat center / 60% url("../../static/icons/instagram-bl.svg") var(--accent-color)
      }

      &.twitter {
        background: no-repeat center / 60% url("../../static/icons/twitter-bl.svg") var(--accent-color)
      }

      &.linkedin {
        background: no-repeat center / 60% url("../../static/icons/linkedin-bl.svg") var(--accent-color)
      }

      &.facebook {
        background: no-repeat center / 40% url("../../static/icons/facebook-bl.svg") var(--accent-color)
      }
    }

    &.instagram {
      background: no-repeat center / 60% url("../../static/icons/instagram-gr.svg") var(--accent-color)
    }

    &.twitter {
      background: no-repeat center / 60% url("../../static/icons/twitter-gr.svg") var(--accent-color)
    }

    &.linkedin {
      background: no-repeat center / 60% url("../../static/icons/linkedin-gr.svg") var(--accent-color)
    }

    &.facebook {
      background: no-repeat center / 40% url("../../static/icons/facebook-gr.svg") var(--accent-color)
    }
  }

  &__contacts {
    justify-self: end
  }

  &__contacts-item {
    display: flex
    align-items: center
    gap: 0 10px
    padding: 5px 0
  }

  &__icon {
    display: block
    width: 30px
    height: 30px

    &.phone {
      background: no-repeat center / 70% url("../../static/icons/phone.svg")
    }

    &.email {
      background: no-repeat center / 70% url("../../static/icons/envelope.svg")
    }
  }

  &__link {
    font-style(normal, var(--medium-size), var(--roboto), var(--footer-text))
  }

  &__slogan {
    grid-column: 1 / 3
    margin-top: 10px
    font-style(normal, var(--small-text), var(--accent-font), var(--footer-text))
  }
}

.headings {
  font-style(bold, var(--headings), var(--accent-font), var(--decorative-color))
}

.success-modal {
  position: fixed
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  min-width: 600px
  min-height: 200px
  border-radius: var(--border-radius)
  background-color: var(--decorative-color)
  border: none
  z-index: 3

  &__container {
    display: flex
    justify-content: center
    align-items: center
    position: relative
    gap: 0 50px
    padding: 0 30px
    width: 100%
    min-height: 200px
  }

  &__icon {
    width: 70px
    height: 70px

    &.check {
      background: no-repeat center / 100% url("../../static/icons/comment-check.svg")
    }
  }

  &__content {
    font-style(normal, var(--large-size), var(--accent-font), var(--dark-green))
  }

  &:backdrop {
    background-color: rgba(0, 0, 0, .9)
  }
}

.modal {
  position: fixed
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  border-radius: var(--border-radius)
  min-width: 700px
  min-height: 200px
  background-color: var(--background-wt)
  border: none
  z-index: 3
  overflow: hidden

  &::backdrop {
    background: rgba(0,0,0,.4)
  }
}

.user-data {
  padding: 50px 30px
  width: 400px
  height: max-content
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25)
  border-radius: var(--border-radius)

  &__header {
    display: flex
    justify-content: center
    align-items: center
    margin-bottom: 30px
    width: 100%
    height: auto
  }

  &__list {
    display: flex
    flex-direction: column
    gap: 20px 0
  }

  &__headline {
    font-style(bold, var(--large-size), var(--accent-font), var(--accent-color))
  }

  &__content {
    font-style(bold, var(--medium-size), var(--accent-font), var(--accent-color))
  }

  &__subtitle {
    font-style(bold, var(--small-size), var(--accent-font), var(--decorative-color))
  }
}

.form-registration {
  display: flex
  flex-direction: column
  padding: 50px
  min-width: 700px
  min-height: 450px
  box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25)
  border-radius: var(--border-radius)

  &__header {
    display: flex
    justify-content: center
    align-items: center
    margin-bottom: 30px
    width: 100%
    height: auto
  }

  &__headline {
    font-style(bold, var(--large-size), var(--accent-font), var(--accent-color))
  }

  &__subtitle {
    margin: 20px 0 10px
    font-style(normal, var(--subtitle), var(--accent-font), var(--text-color-black))
  }

  &__time {
    font-style(normal, var(--medium-size), var(--accent-font), var(--accent-color))
  }

  &__deposit-type {
    margin: 20px 0 10px
    font-style(normal, 1.5rem, var(--accent-font), var(--text-color-black))

    &_accent-color {
      color: var(--accent-color)
    }
  }

  &__select-card {
    padding: var(--padding-input)
    background-color: var(--background-field)
    border: none
    border-radius: 5px
    font-style(normal, var(--small-size), var(--roboto), var(--accent-color))
    transition: box-shadow .4s linear

    &:is(&_hover:hover, &_focus:focus-within) {
      box-shadow: 0 0 0 2px var(--accent-color)
    }
  }

  &__btn {
    margin-top: 20px
    padding: 15px 45px
    align-self: center
    font-size: var(--medium-size)
    background-color: var(--decorative-color)
    border-radius: var(--border-radius)
    border: none
    color: var(--text-color-wt)
    transition: background-color .3s linear
    cursor: pointer

    &:is(&_hover:hover, &_focus:focus) {
      background-color: var(--accent-color)
    }
  }

  .agreement {
    display: flex
    align-items: center
    margin-top: 10px
    gap: 0 15px

    &__checkbox-wrap {
      display: flex
      justify-content: center
      align-items: center
      position: relative
      width: 15px
      height: 15px
      border-radius: 3px
      background-color: var(--checkbox-color)
      transition: box-shadow .4s linear

      &:is(&_hover:hover, &_focus:focus-within) {
        box-shadow: 0 0 0 1px var(--accent-color)
      }
    }

    &__checkbox {
      position: absolute
      opacity: 0
      cursor: pointer

      &:checked ~ .agreement__checkbox-icon {
        display: block
      }
    }

    &__checkbox-icon {
      display: none
      position: relative
      border-radius: 3px
      width: 15px
      height: 15px
      background-color: var(--accent-color)
      cursor: pointer

      &:after {
        content: ""
        position: absolute
        transform: translate(2px, -2px)
        width: 15px
        height: 15px
        background: no-repeat center / 100% url("../../static/icons/check-gr.svg")
      }
    }

    &__content {
      font-style(normal, var(--small-size), var(--roboto), var(--text-color-gr))

      &_accent-color {
        color: var(--accent-color)
      }
    }
  }
}

.loan-data, .deposit-data {
  display: flex
  align-items: center
  gap: 0 10px
  width: 100%

  &_column {
    flex-direction: column
    gap: 20px 0
  }

  &__item {
    display: flex
    justify-content: flex-start
    align-items: center
    gap: 0 30px
    width: 100%

    &_column {
      align-items: flex-start
      flex-direction: column
    }
  }

  &__status {
    font-style(normal, var(--subtitle), var(--accent-font), var(--text-color-black))

    &_accent-color {
      color: var(--accent-color)
    }
  }

  &__period {
    font-style(normal, var(--subtitle), var(--accent-font), var(--text-color-black))
  }

  &__time {
    font-style(normal, var(--medium-size), var(--accent-font), var(--accent-color))
  }

  &__input {
    padding: var(--padding-input)
    background-color: var(--background-field)
    border: none
    border-radius: 5px
    font-style(normal, var(--small-size), var(--roboto), var(--accent-color))
  }

  &__under {
    font-style(normal, var(--small-size), var(--accent-font), var(--accent-color))
  }

  &__percent {
    display: flex
    flex-direction: column
    font-style(normal, 1.3rem, var(--accent-font), var(--accent-color))
  }

  &__subtitle {
    font-style(normal, var(--small-size), var(--accent-font), var(--decorative-color))
  }

  &__type {
    font-style(normal, 1.5rem, var(--accent-font), var(--text-color-black))

    &_accent-color {
      color: var(--accent-color)
    }
  }
}